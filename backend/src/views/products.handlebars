{{#if sessionUser}}
<h2>Bienvenido/a {{sessionUser.name}}</h2>
<h3>Datos:</h3>
<p>Email: {{sessionUser.email}}</p>
<p>Edad: {{sessionUser.age}}</p>
<p>Rol: {{#if sessionAdmin}}Admin{{^}}Usuario{{/if}}</p>
<a class="button" href="http://localhost:8080/api/sessions/logout">Cerrar Sesion</a>
{{else}}
<a class="button" href="http://localhost:8080/api/sessions/">Iniciar Sesion</a>
{{/if}}

<div>
    <h1>Productos</h1>
    {{#each respuesta.payload}}
    <div>
        <p>Nombre: {{this.product_name}}</p>
        <p>Descripcion: {{this.product_description}}</p>
        <p>Precio: {{product_price}}</p>
        <p>Categoria: {{this.product_category}}</p>
    </div>
    <button id="btnComprar" value={{this._id}}>Agregar al Carrito</button>
    <br/>
    {{/each}}
</div>
<br/>
<br/>
<br/>
<div>
    {{#if respuesta.hasPrevPage}}
        <a href={{respuesta.prevLink}}><< Anterior</a>
    {{/if}}
    &nbsp;
    {{respuesta.page}}
    &nbsp;
     {{#if respuesta.hasNextPage}}
        <a href={{respuesta.nextLink}}>Siguiente >></a>
    {{/if}} 
</div>


<script src="/js/products.js"></script>